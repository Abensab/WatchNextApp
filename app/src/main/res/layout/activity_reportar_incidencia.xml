<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".FeedbackAportadoActivity">

    <TextView
        android:id="@+id/textViewStatic"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:text="Notificar Incidencia"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="50sp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp"
        android:background="?attr/actionModeBackground"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="168dp" />

    <TextView
        android:id="@+id/textViewNombreTareaReportIncidencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp"
        android:text="Tarea: ..."
        android:textAlignment="center"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/buttonEnviarIncidencia"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorPrimary"
        android:text="Enviar"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="503dp" />

    <ImageView
        android:id="@+id/imageViewMicro"
        android:layout_width="136dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="182dp"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <ImageView
        android:id="@+id/imageViewRoundBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="166dp"
        app:srcCompat="@mipmap/ic_feedback_border" />

    <Switch
        android:id="@+id/switchTareaBloqueante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:text="Tarea Bloqueante  "
        android:textAlignment="viewStart"
        android:textColor="?attr/actionModeSplitBackground"
        android:theme="@style/AppTheme"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="101dp"
        android:layout_height="113dp"
        android:layout_alignTop="@+id/imageViewMicro"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme"
        app:srcCompat="@android:drawable/ic_media_play" />

    <Button
        android:id="@+id/buttonRemoveAudioRecord"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/imageViewRoundBorder"
        android:layout_toEndOf="@+id/imageViewMicro"
        android:background="@android:drawable/ic_delete" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="134dp"
        android:max="100"
        android:progress="67"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageViewPause"
        android:layout_width="101dp"
        android:layout_height="113dp"
        android:layout_alignTop="@+id/imageViewMicro"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_media_pause" />

</RelativeLayout>